<!DOCTYPE html>
<html>
<head>
  <title>Depot</title>
  <%= stylesheet_link_tag    "scaffold" %>
  <%= stylesheet_link_tag    "depot", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body id="store">
  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "Progmatic Bookshelf" %>
  </div>
  <div id="columns">
    <div id="side">
      <a href="#">Home</a><br />
      <a href="#">Question</a><br />
      <a href="#">News</a><br />
      <a href="#">Contact</a>

      <p id="time"><%= @now %></p>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
</html>
